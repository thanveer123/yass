<project name="java tasks" default="run">
<target name="compile" description="compile the java files">
<mkdir dir="build/classes"/>
<javac srcdir="src" destdir="build/classes"/>
</target>
<target name="package" depends="compile" description="packaing the the files">
<mkdir dir="build/jars"/>
<jar destfile="build/jars/PrimitiveParameters.jar" basedir="build/classes">
<manifest>
<attribute name="Main-Class" value="PrimitiveParameters"/>
</manifest>
</jar>
</target>
<target name="run" depends="package" description="run the package">
<java jar="build/jar/PrimitiveParameters.jar" fork="true"/>
</target>
</project>